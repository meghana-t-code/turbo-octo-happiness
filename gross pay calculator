        "# my name is meghana thirumala and this is my paycheck calculator for employees at a company.\n",
        "# It gives 1.5 times the hourly rate for hours worked above 40 hours,\n",
        "# handles non-numeric input gracefully,\n",
        "# validates the inputs and keep asking the user to enter valid inputs for the hours and the rate value,\n",
        "# and provides the employee with a reciept of a description of their pay!\n",
        "\n",
        "import random\n",
        "\n",
        "while True:\n",
        "      company_name = input('What is your company name? ').strip()\n",
        "      hrs = input('how many hours did you work? ')\n",
        "      rte = input('what is the rate of your salary? ')\n",
        "\n",
        "      try:\n",
        "        HOURS = float(hrs)\n",
        "        RATE = float(rte)\n",
        "\n",
        "        if HOURS < 0 or RATE < 0:\n",
        "          print('error: hours worked and rate cannot be negative. please enter positive numbers or zero, thank you!')\n",
        "          continue\n",
        "\n",
        "        if HOURS > 40:\n",
        "          overtime_pay = (HOURS - 40) * (RATE * 1.5)\n",
        "          gross_pay = (40 * RATE) + (overtime_pay)\n",
        "          document_number = random.randint(1000, 2000)\n",
        "          print('\\n ---------Summary!-----------')\n",
        "          print('company name:', company_name)\n",
        "          print('hours worked:', round(HOURS, 2))\n",
        "          print('rate of pay:', round(RATE,2))\n",
        "          print('-----------------------------')\n",
        "          print('document number:', document_number)\n",
        "          print('Your',company_name,'gross pay is:', gross_pay )\n",
        "          break\n",
        "\n",
        "\n",
        "        if HOURS <= 40:\n",
        "          gross_pay = HOURS * RATE\n",
        "          document_number = random.randint(1000, 2000)\n",
        "          print('\\n ---------Summary!-----------')\n",
        "          print('company name:', company_name)\n",
        "          print('hours worked:', round(HOURS, 2))\n",
        "          print('rate of pay:', round(RATE,2))\n",
        "          print('-----------------------------')\n",
        "          print('document number:', document_number)\n",
        "          print('Your',company_name,'gross pay is:', gross_pay )\n",
        "          break\n",
        "\n",
        "      except:\n",
        "        print('error, please enter numeric inputs thank you!')\n",
        "\n",
        "\n",
